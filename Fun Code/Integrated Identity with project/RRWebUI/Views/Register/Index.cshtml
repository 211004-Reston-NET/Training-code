@model RRWebUI.Models.RegisterVM

<h1>Register</h1>

<form asp-action="Index">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="mb-3" style="width:25vw">
        <label class="form-label" asp-for="Email">Email address</label>
        <input class="form-control" type="email" asp-for="Email">
        <span asp-validation-for="Email"></span>
        <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3" style="width:25vw">
        <label class="form-label" asp-for="Password">Password</label>
        <input class="form-control" type="password" asp-for="Password">
    </div>
    <div class="mb-3" style="width:25vw">
        <label class="form-label" asp-for="ConfirmPassword">Confirm Password</label>
        <input class="form-control" type="password" asp-for="ConfirmPassword">
    </div>
    <button type="submit" class="btn btn-primary" value="Index">Submit</button>
</form>