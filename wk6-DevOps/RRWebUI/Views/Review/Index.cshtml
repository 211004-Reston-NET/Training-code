@{
}


@model IEnumerable<RRWebUI.Models.ReviewVM>

<h1 class="display-4">List Of Reviews</h1>
<h4>Overall Rating: @ViewData["OverRating"]</h4>

<br />

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Rating</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var review in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => review.Rating)</td>
                <td>@Html.DisplayFor(modelItem => review.Description)</td>
            </tr>
        }
    </tbody>
</table>