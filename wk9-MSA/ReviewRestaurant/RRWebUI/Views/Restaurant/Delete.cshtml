@{
}

@model RRWebUI.Models.RestaurantVM

<h1 class="display-4">Delete Restaurant</h1>
<h3>You sure you want to delete this restaurant?</h3>

<div>
    <dl>
        <dt>
            Id:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.Id)</span>
        </dt>
        <dt>
            Name:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.Name)</span>
        </dt>
        <dt>
            City:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.City)</span>
        </dt>
        <dt>
            State:
            <span class="col-sm-10" style="font-weight: normal;">@Html.DisplayFor(model => model.State)</span>
        </dt>

        <!--We need a form to do a post request-->
        <form asp-action="Delete">
            <!--
                This input element is hidden because we don't want the user to input some id instead we are just supplying the id w
                Already have
            -->
            <input type ="hidden" asp-for="Id"/>
            <input type ="submit" value="Delete" class="btn btn-danger"/>
        </form>
    </dl>
</div>